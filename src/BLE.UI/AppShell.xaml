<?xml version="1.0" encoding="utf-8"?>
<Shell
    x:Class="BLE.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BLE.UI.Views">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Route="dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent
            Title="Labor / Proben"
            Route="proben"
            ContentTemplate="{DataTemplate views:ProbenPage}" />
        <ShellContent
            Title="Neue Probe"
            Route="neue-probe"
            ContentTemplate="{DataTemplate views:NewProbePage}" />
        <ShellContent
            Title="Einstellungen"
            Route="settings"
            x:Name="SettingsShellContent"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
