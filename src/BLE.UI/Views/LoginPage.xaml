<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BLE.UI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="BLE Login" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="_userEntry" Placeholder="Benutzername" />
        <Entry x:Name="_passEntry" Placeholder="Passwort" IsPassword="True" />
        <Button Text="Anmelden" Clicked="OnLoginClicked" />
        <Label x:Name="_status" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
